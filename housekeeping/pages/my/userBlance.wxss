/* pages/my/userBlance.wxss */
page{
  background-color:#fff;
}
.userbl{
  position:relative;width:100%;
}
.userbl image{
  position:absolute;width:100%;
  left:0;top:0;z-index:-1;
}
.userbl-page-section{
  width: 100%;
  height:auto;
  display:table;
  overflow-x: hidden;
}
.userbl-title{
  width:100%;height:40px;font-size:16px;
  line-height:40px;padding-left:20rpx;
}
.userbl-scroll-view_H{
  white-space: nowrap;
  
}
.userbl-scroll-view-item{
  height: 300rpx;
}
.userbl-scroll-view-item_H{
  display:inline-block;
  width:80%;
  margin:0 20rpx;
}
.userbl{
  padding-bottom:70rpx;
  /* background:-webkit-gradient(linear, 0 0, 0 bottom, from(#fd1438), to(#eb5516)); */
}
.blance-detail{
  color:#fff;
  font-size:28rpx;
  text-align:right;
  padding:20rpx 20rpx 0 0;
}
.my-blance{
  font-size:70rpx;
  color:#fff;
  width:100%;
  text-align:center;
  padding:110rpx 0 30rpx;

}
.j_usenav{
  margin:auto;
  color:#333;
  font-size:30rpx;
  height:85rpx;
  width:270rpx;
  text-align:center;
  line-height:90rpx;
  border-radius:100px;
  background-color:#fdd238;

}

.userbl-tip{
  width:100%;margin-top:30px;
}
.userbl-tip text{
  color:#999;
  text-align:center;
  font-size:12px;
  line-height:20px;
}
.activity-place{
  font-size: 30rpx;
  text-align: center;
  padding: 20rpx 0;
  color: #666666;

}
.cut-line{
  height: 20rpx;
  width: 100%;
  border-top: 1rpx solid #dfdfdf;

}
.activity-swiper{
  width: 100%;
  /*padding-bottom:20rpx;*/
  height: 576rpx;
  display: flex;
  white-space: nowrap;
  /*padding-left: 40rpx;*/
  box-sizing: border-box;
}
.activity-swiper .activity-swiper-item{
  display: inline-block;
  margin-right: 20rpx;
}
.activity-swiper-item .slide-image{
  width: 650rpx;
  height: 441rpx;
}
.activity-swiper-item:first-of-type{
  margin-left: 20rpx;
}
.first-desc{
  display: flex;
  justify-content: space-between;
  width:600rpx;
  padding:15rpx 15rpx 0;
  box-sizing: border-box;
}
.first-desc-left{
  font-size: 32rpx;
  color:#333;

}
.first-desc-left text{
  display: inline-block;
  font-size: 24rpx;
  color: #999;
}
.first-desc-right{
  color: #fd1438;
  font-weight: 900;
  font-size: 30rpx;

}
.second-desc{
  font-size: 30rpx;
  color: #999;
  padding: 10rpx 0 10rpx 25rpx;
}
.activity-place view{
  display: inline-block;
  width: 34rpx;
  height:34rpx;
  background: url("http://zaihumnorj.oss-cn-hangzhou.aliyuncs.com/gift.jpg");
  background-size: cover;
  vertical-align: -4rpx;
}