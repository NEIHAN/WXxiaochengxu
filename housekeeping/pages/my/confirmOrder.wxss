.orderItem{
    padding: 15rpx 15rpx 0 15rpx;
    background: #fff;
}
.orderItem text{
    display: inline-block;
    font-size:28rpx;
}
.orderItem .text1{
  color:#999;
}
.orderTotal{
   margin-top:0rpx;
margin-bottom:20rpx;
padding-bottom:30rpx;

}
.orderTotal text{
  font-size:28rpx;
}
.orderTotal text:nth-of-type(2){
  float:right;
  padding-right:40rpx;
}
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9999;
    color: #fff;
}

.modal-dialog {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    border-top-left-radius: 16px;
    border-top-right-radius: 16px;
}
.footerView{
    color: red;
}
.footerView,.radio{
    display: flex;
    justify-content: space-between;
    padding: 10rpx 30rpx;
}
.radio-group{
    display: flex;
    flex-direction: column;
}
.confirmPay{
    padding: 30rpx;

}
.confirmPay button{
    background: #fd1438;
    color: #fff;
}
.j_singleft{
    position:relative;

}
.j_singleft image{
    width:40rpx;
    height: 40rpx;
    display: inline-block;
    position: absolute;
    top:50%;
    -webkit-transform: translateY(-50%);
}
.j_singleft text{
   
    font-size: 28rpx;
}
.j_singlelist{
    background-color:#fff;
    padding:30rpx 15rpx;
    position: relative;
    margin-top:0rpx;
    padding-bottom:0;
    position: relative;
    padding-top:0;
}
.j_singlelist text{
    color:#999;
}
.checkbox{
    position: absolute;
    top:50%;
    right:10rpx;
    -webkit-transform: translateY(-50%);
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after{
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 30rpx;
}

.jt{
  width:40rpx;
  height:40rpx;
  position: absolute;
  right: 15rpx;
  top:0rpx;
}
.jt image{
  width:40rpx;
