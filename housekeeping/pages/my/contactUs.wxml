    <view class="contactList">
      <image src="http://zaihumnorj.oss-cn-hangzhou.aliyuncs.com/zaixiankefu.png"></image>
    <button open-type="contact"  style="text-align:start;background:#fff;padding-left:0;">在线客服</button>
    </view>
    <view class="contactList" bindtap="callMobile">
      <image src="http://zaihumnorj.oss-cn-hangzhou.aliyuncs.com/kefudianhua.png"></image>
      <text>客服电话</text>
    </view>
</view>

