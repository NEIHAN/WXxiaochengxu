/* pages/my/newOrderDetail.wxss */

.order-wrap{
  width:100%;
  color:#333;
  font-size:14px;
}

/* 订单状态 */
.order-title, .order-info, .order-detail{
  width:100%;
  padding:0 10px;
  background:#fff;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  margin-bottom:10px;
}
.order-status-text, .order-info-text, .order-detail-text{
  padding:6px 0;
  border-bottom:1px solid #ccc;
  font-size:28rpx;
}
.order-content{
  width:100%;
  height:60px;
  padding-top:10px;
  display:-webkit-box;
}
.content-left{
  width:20px;
  height:100%;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-box-align:center;
}
.content-left .circle-lg{
  width:20px;
  height:20px;
  border-radius:50%;
  border:2px solid #dcfebc;
  padding:2px;
}
.content-left .circle-lg .circle-sm{
  width:100%;
  height:100%;
  border-radius:50%;
  background:#a3d46e;
}
.content-left .line{
  width:1px;
  -webkit-box-flex:1;
  background:#ccc;
}
.content-right{
  -webkit-box-flex:1;
  padding-left:10px;
  display:-webkit-box;
  -webkit-box-orient: vertical;
  position:relative;
}
.content-right .status{
  margin-bottom:5px;
}
.content-right .time{
  color:#999;
  font-size:10px;
  font-weight:300;
}

/* 订单信息 */
.order-info{
  padding-bottom:10px;
}
.order-info view{
  width:100%;
  display:-webkit-box;
  margin-top:5px;
}
.info-title, .detail-title{
  /*width:70px;*/
  color:#999;
  font-size:28rpx;
}
.info-content{
  margin-left:10px;
}

/* 订单明细 */
.order-detail{
  padding-bottom:10px;
}
.order-detail-text{
  margin-bottom:20px;
}
.order-detail view{
  padding:2px 0;
}
.detail-title{
  float: left;
}
.unit{
  float: left;
  margin-left:10px;
  color:#999;
}
.price{
  float: right;
  font-size:28rpx;
}

/* 页脚按钮 */
.order-footer{
  width:100%;
  background:#fff;
  height:55px;
  padding:10px;
  display:-webkit-box;
  -webkit-box-pack:end;
}
.order-footer text{
  display:block;
  width:82px;
  height:100%;
  line-height:33px;
  font-size:16px;
  text-align:center;
  border-radius:4px;
  border:1px solid #ccc;
  margin-left:20px;
}
.order-footer .cancel-order{
  border:1px solid #ccc;
}
.order-footer .to-pay{
  border:1px solid red;
  color:red;
  margin-left:20px;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
}
.footerView{
  color: red;
}
.footerView,.radio{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx;
}
.radio-group{
  display: flex;
  flex-direction: column;
}
.confirmPay{
  padding: 30rpx;

}
.confirmPay button{
  background: red;
  color: #fff;
}
.refundContainer{
  position: fixed;
  z-index: 9999;
  background-color: #fff;
  border-radius: 8px;
  width:80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
}
.reasonItem{
  padding: 30rpx;
  text-align: center;
  border-top: 1px solid #d4d4d4;
  color: #333;
  font-weight: bold;

}
.cancelReason{
  background-color: #fd1438;
  padding: 20rpx 0;
  font-size: 18px;
  color: #fff;
}
.order-info view{
  display: flex;
  flex-wrap: wrap;
}
.order-info .info-title{
  width: 140rpx;
}
.order-info .info-content{
  flex: 1;
}
.refundBtn button::after {
  border-radius: 0;
}
.refundBtn button{
  border-radius: 0;
}