/* pages/my/login.wxss */

.iphone{
  height:50px;background:#fff;margin-top:10px;padding:0 3%;
  border-bottom:1px solid #efefef;
}
.iphone text{
  float:left;line-height:50px;
  font-size:16px;margin-right:10px;
}
.iphone input{
  width:70%;float:left;
  height:50px;font-size:14px;
}
.code{
  height:50px;background:#fff;padding:0 3%;
}
.code text{
  float:left;line-height:50px;
  font-size:16px;margin-right:10px;
}
.code input{
  width:55%;float:left;
  height:50px;font-size:14px;
}
.code .getCode{
  display:inline-block;width:25%;height:30px;margin:10px 0;
  font-size:12px;float:right;line-height:30px;background:#fd1438;padding:0!important;color:#fff;
}

.loginBtn{
  display:block;width:85%;height:40px;background:#fd1438;color:#fff;margin-top:20px;
  line-height:40px;
}

.wxLogin{
  width:auto;border:1px solid #09bb07;border-radius:30px;
 margin:auto;display:table;padding: 0 10px;margin-top:70%;
}
.wxLogin .wxicon{
  width:34px;height:26px;display:block;margin-right:10px;float:left;margin-top:6px;
}
.wxLogin text{
  color:#09bb07;float:left;line-height:40px;font-size:14px;
}